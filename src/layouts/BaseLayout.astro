---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Comprehensive fastener specifications database - screws, bolts, anchors, and nuts." } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | fasteners.fyi</title>

    <!-- Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-7YTFBKYLFW"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-7YTFBKYLFW');
    </script>
  </head>
  <body class="min-h-screen flex flex-col">
    <header class="border-b border-zinc-800 bg-zinc-900/50 backdrop-blur-sm sticky top-0 z-50">
      <nav class="max-w-6xl mx-auto px-4 py-4 flex items-center justify-between">
        <a href="/" class="text-xl font-bold text-primary-400 hover:text-primary-300 transition-colors">
          fasteners.fyi
        </a>
        <div class="flex gap-6 text-sm">
          <a href="/screws" class="text-zinc-400 hover:text-zinc-100 transition-colors">Screws</a>
          <a href="/bolts" class="text-zinc-400 hover:text-zinc-100 transition-colors">Bolts</a>
          <a href="/anchors" class="text-zinc-400 hover:text-zinc-100 transition-colors">Anchors</a>
          <a href="/nuts" class="text-zinc-400 hover:text-zinc-100 transition-colors">Nuts</a>
          <a href="/washers" class="text-zinc-400 hover:text-zinc-100 transition-colors">Washers</a>
          <a href="/search" class="text-zinc-400 hover:text-zinc-100 transition-colors">Search</a>
          <a href="/compare" class="text-zinc-400 hover:text-zinc-100 transition-colors">Compare</a>
        </div>
      </nav>
    </header>

    <main class="flex-1">
      <slot />
    </main>

    <footer class="border-t border-zinc-800 mt-auto">
      <div class="max-w-6xl mx-auto px-4 py-8 text-center text-zinc-500 text-sm">
        <p>&copy; {new Date().getFullYear()} fasteners.fyi</p>
        <p class="mt-2">Open source fastener specifications database. MIT License.</p>
        <div class="mt-4 flex justify-center">
          <a href="https://centricle.com" title="Centricle" aria-label="Centricle" class="text-amber-500/70 hover:text-amber-500 transition-colors">
            <svg class="w-6 h-6" viewBox="0 0 32 32" fill="none">
              <path d="M 23.5 7.5 C 19 3.5, 11.5 4, 7.5 8.5 C 3.5 13, 4 20.5, 8 24.5 C 12.5 28.5, 20 28, 24 23.5" stroke="currentColor" stroke-width="3" fill="none" stroke-linecap="round"/>
              <ellipse cx="15.5" cy="16.3" rx="3.2" ry="2.8" fill="currentColor"/>
            </svg>
          </a>
        </div>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  @import "../styles/global.css";
</style>
