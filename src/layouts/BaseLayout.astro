---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Comprehensive fastener specifications database - screws, bolts, anchors, and nuts." } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | fasteners.fyi</title>

    <!-- Open Graph -->
    <meta property="og:title" content={`${title} | fasteners.fyi`} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:site_name" content="fasteners.fyi" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content={`${title} | fasteners.fyi`} />
    <meta name="twitter:description" content={description} />

    <!-- SEO -->
    <link rel="canonical" href={Astro.url} />
    <meta name="robots" content="index, follow" />

    <!-- Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-7YTFBKYLFW"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-7YTFBKYLFW');
    </script>
  </head>
  <body class="min-h-screen flex flex-col">
    <header class="border-b border-bp-700 bg-bp-900/60 backdrop-blur-sm sticky top-0 z-50">
      <nav class="max-w-6xl mx-auto px-4 py-4 flex items-center justify-between">
        <a href="/" class="text-xl font-bold hover:text-accent-300 transition-colors">
          <span class="text-accent-400">fasteners</span><span class="text-white">.fyi</span>
        </a>
        <div class="flex gap-6 text-sm">
          <a href="/screws" class="text-bp-text-muted hover:text-bp-text transition-colors">Screws</a>
          <a href="/bolts" class="text-bp-text-muted hover:text-bp-text transition-colors">Bolts</a>
          <a href="/anchors" class="text-bp-text-muted hover:text-bp-text transition-colors">Anchors</a>
          <a href="/nuts" class="text-bp-text-muted hover:text-bp-text transition-colors">Nuts</a>
          <a href="/washers" class="text-bp-text-muted hover:text-bp-text transition-colors">Washers</a>
          <a href="/search" class="text-bp-text-muted hover:text-bp-text transition-colors">Search</a>
          <a href="/compare" class="text-bp-text-muted hover:text-bp-text transition-colors">Compare</a>
        </div>
      </nav>
    </header>

    <main class="flex-1">
      <slot />
    </main>

    <footer class="border-t border-bp-700 mt-auto">
      <div class="max-w-6xl mx-auto px-4 relative py-8">
        <div class="absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2">
          <a href="https://centricle.com" title="Centricle" aria-label="Centricle" class="text-amber-500/70 hover:text-amber-500 transition-colors">
            <svg class="w-7 h-7" viewBox="0 0 32 32" fill="none" xmlns="http://www.w3.org/2000/svg">
              <g transform="rotate(-5, 16, 16)">
                <path d="M 11.5 3 L 11.3 8.5 L 11.6 16 L 11.4 23.5 L 11.5 29" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M 11.6 16 L 16 11 L 22.5 4.5" stroke="currentColor" stroke-width="2.2" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M 11.6 16 L 17 20.2 L 25.5 26" stroke="currentColor" stroke-width="2.2" stroke-linecap="round" stroke-linejoin="round"/>
                <circle cx="11.5" cy="16" r="2.8" fill="currentColor"/>
              </g>
            </svg>
          </a>
        </div>
        <div class="flex items-center justify-between text-sm text-bp-text-faint">
          <span>&copy; {new Date().getFullYear()} fasteners.fyi</span>
        </div>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  @import "../styles/global.css";
</style>
