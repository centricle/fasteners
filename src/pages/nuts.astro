---
import BaseLayout from '../layouts/BaseLayout.astro';
import FastenerIcon from '../components/FastenerIcon.astro';
import { nuts } from '../utils/data';
---

<BaseLayout title="Nuts" description="Nut specifications - hex nuts, lock nuts, wing nuts, and specialty nuts.">
  <div class="max-w-6xl mx-auto px-4 py-16">
    <h1 class="text-4xl font-bold mb-4">Nuts</h1>
    <p class="text-xl text-bp-text-muted mb-8">
      Hex nuts, lock nuts, wing nuts, and specialty fasteners.
    </p>

    <div class="grid gap-4">
      {nuts.map((nut) => (
        <a href={`/nuts/${nut.slug}`} class="flex gap-4 items-start rounded-lg border border-bp-700 bg-bp-900/60 p-6 hover:border-accent-500 hover:bg-bp-900 transition-colors">
          <FastenerIcon slug={nut.slug} category="nuts" class="w-12 shrink-0 text-bp-text-faint" />
          <div>
            <h2 class="text-xl font-semibold mb-2">{nut.name}</h2>
            <p class="text-bp-text-muted mb-4">{nut.description}</p>
            <div class="flex flex-wrap gap-2">
              {nut.materials.slice(0, 3).map((material) => (
                <span class="px-2 py-1 text-xs rounded bg-bp-800 text-bp-text">{material}</span>
              ))}
              {nut.lockingMechanism && nut.lockingMechanism !== 'none' && (
                <span class="px-2 py-1 text-xs rounded bg-purple-900/50 text-purple-300">{nut.lockingMechanism}</span>
              )}
            </div>
          </div>
        </a>
      ))}
    </div>
  </div>
</BaseLayout>
