---
import BaseLayout from '../layouts/BaseLayout.astro';
import FastenerIcon from '../components/FastenerIcon.astro';
import { screws, bolts, anchors, nuts, washers } from '../utils/data';

const categories = [
  {
    name: 'Screws',
    href: '/screws',
    description: 'Wood screws, machine screws, self-tapping, and specialty screws',
    count: screws.length,
    iconSlug: 'wood-screw',
    iconCategory: 'screws' as const
  },
  {
    name: 'Bolts',
    href: '/bolts',
    description: 'Hex bolts, carriage bolts, eye bolts, and structural fasteners',
    count: bolts.length,
    iconSlug: 'hex-bolt',
    iconCategory: 'bolts' as const
  },
  {
    name: 'Anchors',
    href: '/anchors',
    description: 'Wall anchors, concrete anchors, toggle bolts, and expansion anchors',
    count: anchors.length,
    iconSlug: 'wedge-anchor',
    iconCategory: 'anchors' as const
  },
  {
    name: 'Nuts',
    href: '/nuts',
    description: 'Hex nuts, lock nuts, wing nuts, and specialty nuts',
    count: nuts.length,
    iconSlug: 'hex-nut',
    iconCategory: 'nuts' as const
  },
  {
    name: 'Washers',
    href: '/washers',
    description: 'Flat washers, lock washers, spring washers, and specialty washers',
    count: washers.length,
    iconSlug: 'flat-washer',
    iconCategory: 'washers' as const
  }
];
---

<BaseLayout title="Home">
  <div class="max-w-6xl mx-auto px-4 py-16">
    <div class="text-center mb-16">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">
        <span class="text-accent-400">Fastener</span> Specifications Database
      </h1>
      <p class="text-xl text-bp-text-muted max-w-2xl mx-auto">
        Comprehensive, objective specifications for screws, bolts, anchors, and nuts.
        No opinions, just facts.
      </p>
    </div>

    <div class="grid md:grid-cols-2 gap-6 mb-16">
      {categories.map((category) => (
        <a
          href={category.href}
          class="flex gap-5 items-start p-6 rounded-lg border border-bp-700 bg-bp-900/60 hover:border-accent-500 hover:bg-bp-900 transition-all group"
        >
          <FastenerIcon slug={category.iconSlug} category={category.iconCategory} class="w-14 shrink-0 text-bp-text-faint group-hover:text-accent-400 transition-colors" />
          <div>
            <h2 class="text-2xl font-semibold text-bp-text group-hover:text-accent-400 transition-colors mb-2">
              {category.name}
            </h2>
            <p class="text-bp-text-muted mb-4">{category.description}</p>
            <span class="text-sm text-bp-text-faint">
              {category.count > 0 ? `${category.count} types` : 'Coming soon'}
            </span>
          </div>
        </a>
      ))}
    </div>

    <div class="text-center border-t border-bp-700 pt-16">
      <h2 class="text-2xl font-semibold mb-4">About This Project</h2>
      <p class="text-bp-text-muted max-w-2xl mx-auto mb-8">
        fasteners.fyi is an open-source database of fastener specifications.
        All data is sourced from manufacturer datasheets and industry standards.
      </p>
      <div class="flex justify-center gap-4">
        <a
          href="https://github.com/centricle/fasteners.fyi"
          class="px-6 py-3 rounded-lg bg-bp-800 text-bp-text hover:bg-bp-700 transition-colors"
        >
          View on GitHub
        </a>
      </div>
    </div>
  </div>
</BaseLayout>
