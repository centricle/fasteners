---
import BaseLayout from '../layouts/BaseLayout.astro';
import FastenerIcon from '../components/FastenerIcon.astro';
import { washers } from '../utils/data';
---

<BaseLayout title="Washers" description="Comprehensive washer specifications - flat washers, lock washers, spring washers, and specialty washers.">
  <div class="max-w-6xl mx-auto px-4 py-16">
    <h1 class="text-4xl font-bold mb-4">Washers</h1>
    <p class="text-xl text-bp-text-muted mb-8">
      Flat washers, lock washers, spring washers, and specialty washers for load distribution and vibration resistance.
    </p>

    <div class="grid gap-4">
      {washers.map((washer) => (
        <a href={`/washers/${washer.slug}`} class="flex gap-4 items-start rounded-lg border border-bp-700 bg-bp-900/60 p-6 hover:border-accent-500 hover:bg-bp-900 transition-colors">
          <FastenerIcon slug={washer.slug} category="washers" class="w-12 shrink-0 text-bp-text-faint" />
          <div>
            <h2 class="text-xl font-semibold mb-2">{washer.name}</h2>
            <p class="text-bp-text-muted mb-4">{washer.description}</p>
            <div class="flex flex-wrap gap-2">
              {washer.materials.slice(0, 3).map((material) => (
                <span class="px-2 py-1 text-xs rounded bg-bp-800 text-bp-text">{material}</span>
              ))}
              {washer.washerType && (
                <span class="px-2 py-1 text-xs rounded bg-bp-800 text-accent-400">{washer.washerType} type</span>
              )}
            </div>
          </div>
        </a>
      ))}
    </div>
  </div>
</BaseLayout>
