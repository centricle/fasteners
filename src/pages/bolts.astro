---
import BaseLayout from '../layouts/BaseLayout.astro';
import FastenerIcon from '../components/FastenerIcon.astro';
import { bolts } from '../utils/data';
---

<BaseLayout title="Bolts" description="Bolt specifications - hex bolts, carriage bolts, lag bolts, and structural fasteners.">
  <div class="max-w-6xl mx-auto px-4 py-16">
    <h1 class="text-4xl font-bold mb-4">Bolts</h1>
    <p class="text-xl text-bp-text-muted mb-8">
      Hex bolts, carriage bolts, lag bolts, and structural fasteners.
    </p>

    <div class="grid gap-4">
      {bolts.map((bolt) => (
        <a href={`/bolts/${bolt.slug}`} class="flex gap-4 items-start rounded-lg border border-bp-700 bg-bp-900/60 p-6 hover:border-accent-500 hover:bg-bp-900 transition-colors">
          <FastenerIcon slug={bolt.slug} category="bolts" class="w-12 shrink-0 text-bp-text-faint" />
          <div>
            <h2 class="text-xl font-semibold mb-2">{bolt.name}</h2>
            <p class="text-bp-text-muted mb-4">{bolt.description}</p>
            <div class="flex flex-wrap gap-2">
              {bolt.materials.slice(0, 3).map((material) => (
                <span class="px-2 py-1 text-xs rounded bg-bp-800 text-bp-text">{material}</span>
              ))}
              {bolt.nutRequired && (
                <span class="px-2 py-1 text-xs rounded bg-amber-900/50 text-amber-300">nut required</span>
              )}
            </div>
          </div>
        </a>
      ))}
    </div>
  </div>
</BaseLayout>
