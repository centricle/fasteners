---
import BaseLayout from '../../layouts/BaseLayout.astro';
import FastenerIcon from '../../components/FastenerIcon.astro';
import { anchors } from '../../utils/data';
import type { Anchor } from '../../types/fastener';

export function getStaticPaths() {
  return anchors.map((anchor) => ({
    params: { slug: anchor.slug },
    props: { anchor }
  }));
}

interface Props {
  anchor: Anchor;
}

const { anchor } = Astro.props;

const title = `${anchor.name} Specifications`;
const description = anchor.description;

// Format dimension range for display
function formatRange(range: { min: number; max: number; unit: string } | undefined): string {
  if (!range) return 'N/A';
  return `${range.min}" - ${range.max}"`;
}

// Format base material for display
function formatBaseMaterial(material: string): string {
  return material.replace(/-/g, ' ').replace(/\b\w/g, l => l.toUpperCase());
}
---

<BaseLayout title={title} description={description}>
  <!-- JSON-LD Structured Data -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "Product",
    "name": anchor.name,
    "description": anchor.description,
    "category": "Fastener > Anchor",
    "material": anchor.materials.map(m => m.replace(/-/g, ' ')).join(', '),
    "additionalProperty": [
      {
        "@type": "PropertyValue",
        "name": "Base Materials",
        "value": anchor.baseMaterial.map(m => m.replace(/-/g, ' ')).join(', ')
      },
      ...(anchor.loadCapacity?.tension ? [{
        "@type": "PropertyValue",
        "name": "Tension Capacity",
        "value": `${anchor.loadCapacity.tension} ${anchor.loadCapacity.unit}`
      }] : []),
      ...(anchor.loadCapacity?.shear ? [{
        "@type": "PropertyValue",
        "name": "Shear Capacity",
        "value": `${anchor.loadCapacity.shear} ${anchor.loadCapacity.unit}`
      }] : []),
      ...(anchor.diameterRange ? [{
        "@type": "PropertyValue",
        "name": "Diameter Range",
        "value": `${anchor.diameterRange.min}" - ${anchor.diameterRange.max}"`
      }] : []),
      ...(anchor.lengthRange ? [{
        "@type": "PropertyValue",
        "name": "Length Range",
        "value": `${anchor.lengthRange.min}" - ${anchor.lengthRange.max}"`
      }] : [])
    ]
  })} />

  <div class="max-w-6xl mx-auto px-4 py-8">
    <!-- Breadcrumb -->
    <nav class="mb-8 flex text-sm" aria-label="Breadcrumb">
      <ol class="inline-flex items-center space-x-2">
        <li>
          <a href="/" class="text-bp-text-muted hover:text-bp-text">Home</a>
        </li>
        <li class="text-bp-text-faint">/</li>
        <li>
          <a href="/anchors" class="text-bp-text-muted hover:text-bp-text">Anchors</a>
        </li>
        <li class="text-bp-text-faint">/</li>
        <li class="text-bp-text">{anchor.name}</li>
      </ol>
    </nav>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Main Content -->
      <div class="lg:col-span-2 space-y-8">
        <div class="flex items-start gap-6">
          <FastenerIcon slug={anchor.slug} category="anchors" class="w-20 shrink-0 text-bp-text-muted" />
          <div>
            <h1 class="text-4xl font-bold mb-4">{anchor.name}</h1>
            {anchor.aliases && anchor.aliases.length > 0 && (
              <p class="text-bp-text-muted mb-4">Also known as: {anchor.aliases.join(', ')}</p>
            )}
            <p class="text-lg text-bp-text">{anchor.description}</p>
          </div>
        </div>

        <!-- Base Materials -->
        <div class="border border-bp-700 rounded-lg p-6 bg-bp-900/60">
          <h2 class="text-xl font-semibold mb-4">Compatible Base Materials</h2>
          <div class="flex flex-wrap gap-2">
            {anchor.baseMaterial.map((material) => (
              <span class="px-3 py-2 rounded-lg bg-green-950/50 border border-green-900 text-green-300 text-sm">
                {formatBaseMaterial(material)}
              </span>
            ))}
          </div>
        </div>

        <!-- Load Capacity -->
        {anchor.loadCapacity && (
          <div class="border border-bp-700 rounded-lg p-6 bg-bp-900/60">
            <h2 class="text-xl font-semibold mb-4">Load Capacity</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              {anchor.loadCapacity.tension && (
                <div class="text-center p-4 bg-bp-800/50 rounded-lg">
                  <p class="text-sm text-bp-text-faint mb-1">Tension (Pull-out)</p>
                  <p class="text-3xl font-bold text-accent-400">{anchor.loadCapacity.tension}</p>
                  <p class="text-sm text-bp-text-muted">{anchor.loadCapacity.unit}</p>
                </div>
              )}
              {anchor.loadCapacity.shear && (
                <div class="text-center p-4 bg-bp-800/50 rounded-lg">
                  <p class="text-sm text-bp-text-faint mb-1">Shear (Sideways)</p>
                  <p class="text-3xl font-bold text-accent-400">{anchor.loadCapacity.shear}</p>
                  <p class="text-sm text-bp-text-muted">{anchor.loadCapacity.unit}</p>
                </div>
              )}
            </div>
            <p class="text-xs text-bp-text-faint mt-4">
              * Load ratings are typical values. Actual capacity varies by installation conditions, base material quality, and anchor size.
            </p>
          </div>
        )}

        <!-- Dimensions -->
        <div class="border border-bp-700 rounded-lg p-6 bg-bp-900/60">
          <h2 class="text-xl font-semibold mb-4">Dimensions</h2>
          <dl class="grid grid-cols-1 md:grid-cols-2 gap-4">
            {anchor.diameterRange && (
              <div>
                <dt class="text-sm text-bp-text-faint">Diameter Range</dt>
                <dd class="text-lg">{formatRange(anchor.diameterRange)}</dd>
              </div>
            )}
            {anchor.lengthRange && (
              <div>
                <dt class="text-sm text-bp-text-faint">Length Range</dt>
                <dd class="text-lg">{formatRange(anchor.lengthRange)}</dd>
              </div>
            )}
            <div>
              <dt class="text-sm text-bp-text-faint">Measurement System</dt>
              <dd class="text-lg">{anchor.measurementSystem.map(s => s.charAt(0).toUpperCase() + s.slice(1)).join(', ')}</dd>
            </div>
          </dl>
        </div>

        <!-- Materials -->
        <div class="border border-bp-700 rounded-lg p-6 bg-bp-900/60">
          <h2 class="text-xl font-semibold mb-4">Anchor Materials</h2>
          <div class="flex flex-wrap gap-2">
            {anchor.materials.map((material) => (
              <span class="px-3 py-1 rounded-full bg-bp-800 text-bp-text text-sm">
                {material.replace(/-/g, ' ').replace(/\b\w/g, l => l.toUpperCase())}
              </span>
            ))}
          </div>
        </div>

        <!-- Standards -->
        {anchor.standards && anchor.standards.length > 0 && (
          <div class="border border-bp-700 rounded-lg p-6 bg-bp-900/60">
            <h2 class="text-xl font-semibold mb-4">Standards</h2>
            <div class="flex flex-wrap gap-2">
              {anchor.standards.map((standard) => (
                <span class="px-3 py-1 rounded border border-bp-600 text-bp-text text-sm font-mono">
                  {standard}
                </span>
              ))}
            </div>
          </div>
        )}
      </div>

      <!-- Sidebar -->
      <div class="space-y-6">
        <!-- Applications -->
        <div class="border border-bp-700 rounded-lg p-6 bg-bp-900/40">
          <h3 class="text-lg font-semibold mb-4">Common Applications</h3>
          <ul class="space-y-2 text-bp-text">
            {anchor.applications.map((app) => (
              <li class="flex items-start gap-2">
                <span class="text-green-500 mt-1">+</span>
                <span>{app}</span>
              </li>
            ))}
          </ul>
        </div>

        <!-- Not Recommended -->
        {anchor.notRecommendedFor && anchor.notRecommendedFor.length > 0 && (
          <div class="border border-bp-700 rounded-lg p-6 bg-red-950/30">
            <h3 class="text-lg font-semibold mb-4">Not Recommended For</h3>
            <ul class="space-y-2 text-bp-text">
              {anchor.notRecommendedFor.map((item) => (
                <li class="flex items-start gap-2">
                  <span class="text-red-500 mt-1">-</span>
                  <span>{item}</span>
                </li>
              ))}
            </ul>
          </div>
        )}

        <!-- Related Fasteners -->
        {anchor.relatedFasteners && anchor.relatedFasteners.length > 0 && (
          <div class="border border-bp-700 rounded-lg p-6 bg-bp-900/60">
            <h3 class="text-lg font-semibold mb-4">Related Fasteners</h3>
            <div class="flex flex-wrap gap-2">
              {anchor.relatedFasteners.map((slug) => (
                <a href={`/anchors/${slug}`} class="px-3 py-1 rounded bg-bp-800 text-accent-400 hover:bg-bp-700 text-sm transition-colors">
                  {slug.replace(/-/g, ' ').replace(/\b\w/g, l => l.toUpperCase())}
                </a>
              ))}
            </div>
          </div>
        )}
      </div>
    </div>
  </div>
</BaseLayout>
