---
import BaseLayout from '../layouts/BaseLayout.astro';
import FastenerIcon from '../components/FastenerIcon.astro';
import { anchors } from '../utils/data';
---

<BaseLayout title="Anchors" description="Wall and concrete anchor specifications - toggle bolts, wedge anchors, and drywall anchors.">
  <div class="max-w-6xl mx-auto px-4 py-16">
    <h1 class="text-4xl font-bold mb-4">Anchors</h1>
    <p class="text-xl text-bp-text-muted mb-8">
      Wall anchors, concrete anchors, toggle bolts, and expansion anchors.
    </p>

    <div class="grid gap-4">
      {anchors.map((anchor) => (
        <a href={`/anchors/${anchor.slug}`} class="flex gap-4 items-start rounded-lg border border-bp-700 bg-bp-900/60 p-6 hover:border-accent-500 hover:bg-bp-900 transition-colors">
          <FastenerIcon slug={anchor.slug} category="anchors" class="w-12 shrink-0 text-bp-text-faint" />
          <div>
            <h2 class="text-xl font-semibold mb-2">{anchor.name}</h2>
            <p class="text-bp-text-muted mb-4">{anchor.description}</p>
            <div class="flex flex-wrap gap-2">
              {anchor.baseMaterial.map((material) => (
                <span class="px-2 py-1 text-xs rounded bg-bp-800 text-bp-text">{material}</span>
              ))}
              {anchor.loadCapacity?.tension && (
                <span class="px-2 py-1 text-xs rounded bg-green-900/50 text-green-300">{anchor.loadCapacity.tension} {anchor.loadCapacity.unit} tension</span>
              )}
            </div>
          </div>
        </a>
      ))}
    </div>
  </div>
</BaseLayout>
